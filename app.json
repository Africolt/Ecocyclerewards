{
  "expo": {
    "name": "ecocyclerewards",
    "slug": "ecocycle-rewards",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Ecocycle logo.jpeg",
    "scheme": "ecocyclerewards",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.ecocycle.rewards",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/Ecocycle logo.jpeg",
        // "monochromeImage": "" // Removed missing file reference
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/Ecocycle logo.jpeg"
    },
"plugins": [
  "expo-router",
  [
    "expo-camera",
    {
      "cameraPermission": "Allow EcoCycle Rewards to access your camera to scan waste items.",
      "microphonePermission": "Allow EcoCycle Rewards to access your microphone for video recording.",
      "recordAudioAndroid": true
    }
  ],
  [
    "expo-location",
    {
      "locationAlwaysAndWhenInUsePermission": "Allow EcoCycle Rewards to use your location to find nearby recycling centers."
    }
  ],
  [
    "expo-splash-screen",
    {
      "image": "./assets/images/Ecocycle logo.jpeg",
      "imageWidth": 200,
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "dark": {
        "backgroundColor": "#0A3D62E" // DARK GREEN
      }
    }
  ]
],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
